
@import "../../sharecomponants/star/rating.wxss";

.case {
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.case .cover {
  width: 100%;
  height: 352rpx;
  vertical-align: bottom;
}

.case::before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 560rpx;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.6) 0, rgba(0, 0, 0, 0) 100%);
}

.case .info {
  color: #fff;
  padding: 0 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
  box-sizing: border-box;
}

.case .info .titleh2 {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.22;
  text-shadow: 2rpx 2rpx rgba(0, 0, 0, 0.4);
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  margin-top: 30rpx;
}
.case .info .rating{
  display: flex;
  margin-top:  10rpx ;
  line-height: 30rpx;
  font-size: 20rpx;
}
.case .info .user{
  flex: 1 ;
  margin-left: 150rpx ;
  justify-content: space-between;
}
.case .detail {
  margin-top: 40rpx;
  padding-left: 18rpx;
  position: relative;
  font-size: 22rpx;
  line-height: 1;
  font-weight: bold;
  text-shadow: 2rpx 4rpx 0px rgba(0, 0, 0, 0.20);
}

.case .detail view {
  margin-bottom: 6rpx;
}

.case .detail text {
  margin-right: 20rpx;
}

.case .detail .place {
  font-weight: normal;
  font-size: 16rpx;
}

.case .detail::before {
  content: '';
  width: 6rpx;
  height: 100%;
  border-right: 1rpx;
  background-color: #4abdcc;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
}

 

.case .avatar {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 15rpx;
  border-radius: 30rpx;
  vertical-align: bottom;
}

.case .bottom {
  position: absolute;
  bottom: 24rpx;
  font-size: 20rpx;
}
