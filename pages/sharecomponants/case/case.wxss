.case {
  background-color: #fff;
  margin-top: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  flex-direction: row;
}

.case image {
  width: 180rpx;
  height: 180rpx;
  flex-shrink: 0;
}

.case .info {
  height: 180rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
  margin-left: 10rpx;
}

.case .info .name {
  color: #111;
  font-size: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.case .info .star_publictime {
  color: #111;
  font-size: 28rpx;
  display: flex ;
  flex-direction: row;
  flex-wrap: nowrap ;

}
.case .info .star_publictime .starview {
  overflow: hidden ;
  white-space: nowrap ;
  text-overflow:  ellipsis ;
  flex: 1 ;
}
.case .info .star_publictime .star-rating {
  display: inline-block;
  margin-right: 6rpx;
}


.case .info .star_publictime image {
  width: 28rpx;
  height: 27rpx;
  margin-right: 4rpx;
}

.case .info .author_state {
  display: flex;
  flex-direction: row;
  color: #777;
  font-size: 28rpx;
  flex-wrap: nowrap;
}

.case .info .author_state .author {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
}

.case .info .author_state .state {
  background-color: #3CB371;
  color: #fff;
  
}
