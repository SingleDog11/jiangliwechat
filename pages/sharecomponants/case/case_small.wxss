.m_case {
  position: relative;
  margin: 20rpx;
  border-bottom: 1px solid #eaeaea;
  padding-bottom: 20rpx; 
  
}

.m_case .cover {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  float: left;
  margin-right: 20rpx;
  background-color: #e7ddc7;
}

.m_case .label {
  position: absolute;
  left: -2rpx;
  top: 20rpx;
  width: 57rpx;
  height: 37rpx;
}

.m_case .info {
  height: 190rpx;
  overflow: hidden;
  position: relative;
}

.m_case .title {
  font-size: 30rpx;
  line-height: 35rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.m_case .rating {
  color: #999;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.m_case .rating image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 7rpx;
}

.m_case .m-rating {
  display: inline-block;
  vertical-align: middle;
}

.m_case .rating .count {
  margin-left: 10rpx;
}

.m_case .desc {
  color: #5c5c5c;
  font-size: 24rpx;
  margin-top: 5rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.m_case .detail {
  color: #999;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 22rpx;
}

.m_case .avatar {
  width: 36rpx;
  height: 36rpx;
  float: left;
  margin-right: 8rpx;
  border-radius: 36rpx;
  vertical-align: bottom;
}

.m_case .user {
  position: absolute;
  width: 100%;
  top: 38rpx;
  left: 200rpx;
  line-height: 36rpx;
  font-size: 18rpx;
}
