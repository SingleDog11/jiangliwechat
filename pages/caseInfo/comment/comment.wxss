
page {
  position: relative;
  background: #f2f2f2;
  padding-bottom: 80rpx;
}

.comment_list {
  overflow: hidden;
  background: #fafafa;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
 
.list_header view {
  float: left;
  line-height: 80rpx;
}

.list_header  .list_header_right {
  float: right;
}

.list_header {
  padding-bottom: 10rpx;
  overflow: hidden;
  font-size: 12px;
  color: #666;
}
.toComment {
  width: 100%;
  height: 104rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-top: 8rpx;
}

.toComment input, .comment_box input {
  background: #fff;
  height: 72rpx;
  margin-top: 15rpx;
  line-height: 72rpx;
  width: 80%;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 2px;
  margin-left: 30rpx;
}

.toComment input {
  background: #f0f0f0;
}

.toComment button, .comment_box button {
  position: absolute;
  right: 0px;
  top: 24rpx;
  padding: 0;
  font-size: 16px;
  height: 72rpx;
  width: 120rpx;
  border: 0px;
  background: none;
  line-height: 72rpx;
  border: 0 none;
}

.toComment button::after, .comment_box button::after {
  border: 0 none;
}

.comment_box button {
  top: 15rpx;
  right: 5rpx;
}

.comment_layer, .Response_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: #000;
  z-index: 1;
  opacity: 0.5;
}

.toComment .comments {
  float: left;
  height: 64rpx;
  width: 75%;
  margin-left: 30rpx;
  line-height: 64rpx;
  color: #ccc;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 32rpx;
  font-size: 12px;
  text-indent: 1em;
}

.comment_box {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  background: #f0f0f0;
  box-sizing: border-box;
  animation: myfirst 0.2s;
  height: 104rpx;
  padding-top: 3rpx;
}

.comment_list .list_header .list_header_left image {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-right: 8rpx;
  border-radius: 30rpx;
}

.comment_list .list_header view {
  line-height: 60rpx;
  color: #a8a8a8;
}

.comment_list .list_header .list_header_left view {
  color: #666;
}

.comment_list .comment_content, .comment_child_box .comment_content {
  font-size: 14px;
  line-height: 36rpx;
  padding-left: 70rpx;
}

.comment_content view {
  float: left;
}

.comment_content {
  color: #1e1e1e;
}

.response_comment {
  padding-right: 8rpx;
}

.response_comment .float_none {
  color: #bf925c;
}

.toRespone {
  font-size: 12px;
  color: #bf925c;
  float: right;
}

.comment_list .list {
  padding: 10rpx 0;
  overflow: hidden;
  border-bottom: 1rpx solid #eaeaea;
}